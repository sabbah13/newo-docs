{
  "name": "newo-dsl",
  "displayName": "Newo DSL",
  "description": "Language support for Newo DSL templates (.jinja, .guidance, .nsl, .nslg)",
  "version": "0.5.3",
  "publisher": "newo",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/newo-ai/newo-nsl-lsp"
  },
  "homepage": "https://github.com/newo-ai/newo-nsl-lsp#readme",
  "bugs": {
    "url": "https://github.com/newo-ai/newo-nsl-lsp/issues"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:newo-jinja",
    "onLanguage:newo-guidance",
    "onLanguage:newo-nsl",
    "onLanguage:newo-nslg",
    "workspaceContains:**/*.jinja",
    "workspaceContains:**/*.guidance",
    "workspaceContains:**/*.nsl",
    "workspaceContains:**/*.nslg"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "newo-jinja",
        "aliases": [
          "Newo Jinja",
          "newo-jinja"
        ],
        "extensions": [
          ".jinja"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/jinja-icon.svg",
          "dark": "./icons/jinja-icon.svg"
        }
      },
      {
        "id": "newo-guidance",
        "aliases": [
          "Newo Guidance",
          "newo-guidance"
        ],
        "extensions": [
          ".guidance"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/guidance-icon.svg",
          "dark": "./icons/guidance-icon.svg"
        }
      },
      {
        "id": "newo-nsl",
        "aliases": [
          "Newo NSL",
          "newo-nsl"
        ],
        "extensions": [
          ".nsl"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/jinja-icon.svg",
          "dark": "./icons/jinja-icon.svg"
        }
      },
      {
        "id": "newo-nslg",
        "aliases": [
          "Newo NSLG",
          "newo-nslg"
        ],
        "extensions": [
          ".nslg"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/guidance-icon.svg",
          "dark": "./icons/guidance-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "newo-jinja",
        "scopeName": "source.newo-jinja",
        "path": "./syntaxes/newo-jinja.tmLanguage.json"
      },
      {
        "language": "newo-guidance",
        "scopeName": "source.newo-guidance",
        "path": "./syntaxes/newo-guidance.tmLanguage.json"
      },
      {
        "language": "newo-nsl",
        "scopeName": "source.newo-jinja",
        "path": "./syntaxes/newo-jinja.tmLanguage.json"
      },
      {
        "language": "newo-nslg",
        "scopeName": "source.newo-guidance",
        "path": "./syntaxes/newo-guidance.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Newo DSL",
      "properties": {
        "newo-dsl.schemasPath": {
          "type": "string",
          "default": "",
          "description": "Path to DSL schemas directory"
        },
        "newo-dsl.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable diagnostic reporting"
        },
        "newo-dsl.enableCompletions": {
          "type": "boolean",
          "default": true,
          "description": "Enable code completions"
        },
        "newo-dsl.enableHover": {
          "type": "boolean",
          "default": true,
          "description": "Enable hover information"
        }
      }
    },
    "snippets": [
      {
        "language": "newo-jinja",
        "path": "./snippets/newo-jinja.json"
      },
      {
        "language": "newo-guidance",
        "path": "./snippets/newo-guidance.json"
      },
      {
        "language": "newo-nsl",
        "path": "./snippets/newo-jinja.json"
      },
      {
        "language": "newo-nslg",
        "path": "./snippets/newo-guidance.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build:prod",
    "build": "node esbuild.js",
    "build:prod": "node esbuild.js --production",
    "watch": "node esbuild.js --watch",
    "compile": "tsc -p ./",
    "package": "npx vsce package --no-dependencies",
    "publish:vsce": "npx vsce publish --no-dependencies",
    "publish:ovsx": "npx ovsx publish",
    "publish:all": "npm run package && npm run publish:vsce && npm run publish:ovsx"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.25.0",
    "ovsx": "^0.10.7",
    "typescript": "^5.3.0"
  }
}
