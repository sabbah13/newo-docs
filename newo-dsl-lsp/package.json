{
  "name": "newo-dsl-lsp",
  "version": "0.1.0",
  "description": "Language Server Protocol implementation for Newo DSL (NSL)",
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/*",
    "vscode-extension"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "lint:templates": "node tools/template-lint/cli.js",
    "lint:flows": "node tools/template-lint/cli.js --flows",
    "generate:schemas": "node tools/dsl-spec/generate.js",
    "test": "npm test --workspaces",
    "clean": "rm -rf packages/*/dist tools/*/dist vscode-extension/dist"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
